<h1>Create A New Recipe!</h1>
<%= form_for @recipe do |f| %>
    <%=f.label 'Recipe title:' %><br/>
    <br/>
    <%=f.text_field :title %>

    <% f.fields_for :ingredients do |ingred| %>
        <%= ingred.label :name %>
        <%= ingred.text_field :name %><br/>
        <br/>

        <%= ingred.label :quantity  %>
        <%= ingred.text_field :quantity %><br/>
        <br/>
    <% end %>

    <%= f.submit %>
<% end %>

